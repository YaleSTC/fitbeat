<div class = "ui container">
  <div class="ui centered card">
    <div class="image">
      <img src="http://semantic-ui.com/images/avatar2/large/kristy.png">
    </div>
    <div class="content">
      <a class="header">{{user.displayName}}</a>
      <div class="meta">
        <span class="date">Height: {{user.height}}</span>
      </div>
      <div class="description">
        I love Fitbits, the Student Developer Mentorship program, 
				and the Health Wearables Hackathon!
      </div>
    </div>
    <div class="extra content">
      <a>
        <i class="user icon"></i>
          Average daily steps: {{user.averageDailySteps}}
      </a>
    </div>
  </div>
</div>
<br></br>
<div class = "ui two column grid container">
  <div class = "column">
    <h1 class="ui centered aligned header">Profile</h1>
    <table class="ui celled striped table">
    <thead>
      <tr><th colspan="2">
        User Information:
      </th>
    </tr></thead>
    <tbody>
      <tr>
        <td>
          <i class="line chart icon"></i> Height
        </td>
        <td>{{user.height}} cm</td>
      </tr>
      <tr>
        <td>
          <i class="treatment icon"></i> Weight
        </td>
        <td>{{user.weight}} kg</td>
      </tr>
      <tr>
        <td>
          <i class="world icon"></i> Country
        </td>
        <td>{{user.country}}</td>
      </tr>
      <tr>
        <td>
          <i class="calendar icon"></i> Member Since
        </td>
        <td>{{user.memberSince}}</td>
      </tr>
    </tbody>
  </table>
  </div>
  <div class = "column">
    <h1 class="ui centered aligned header">Activity</h1>
    <table class="ui celled striped table">
    <thead>
      <tr><th colspan="3">
        Stats:
      </th>
    </tr></thead>
    <tbody>
      <tr>
        <td>
          <i class="marker icon"></i> Distance
        </td>
        <td>{{summary.distances.0.distance}}</td>
      </tr>
      <tr>
        <td>
          <i class="paw icon"></i> Steps
        </td>
        <td>{{summary.steps}}</td>
      </tr>
      <tr>
        <td>
          <i class="building outline icon"></i> Floors
        </td>
        <td>{{summary.floors}}</td>
      </tr>
      <tr>
        <td>
          <i class="food icon"></i> Calories Burned
        </td>
        <td>{{summary.caloriesOut}}</td>
      </tr>
    </tbody>
  </table>
  </div>
</div>
